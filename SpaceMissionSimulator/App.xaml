<Application x:Class="SpaceMissionSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpaceMissionSimulator"
             xmlns:helpers="clr-namespace:SpaceMissionSimulator.Helpers"
             StartupUri="MenuWindow.xaml">
    <Application.Resources>
        <!-- Palette - Modern Vibrant Dark Theme -->
        <Color x:Key="PrimaryColor">#FF6366F1</Color>
        <Color x:Key="AccentColor">#FF10B981</Color>
        <Color x:Key="WindowBackgroundTop">#FF0F0F1E</Color>
        <Color x:Key="WindowBackgroundBottom">#FF1A1A2E</Color>
        <Color x:Key="PanelBackground">#FF16213E</Color>
        <Color x:Key="CardBackground">#FF0F3460</Color>
        <Color x:Key="MutedText">#FFB0B9C6</Color>
        <Color x:Key="HighlightText">#FFFF6B9D</Color>
        <Color x:Key="SuccessColor">#FF34D399</Color>
        <Color x:Key="WarningColor">#FFF59E0B</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="WindowBackgroundTopBrush" Color="{StaticResource WindowBackgroundTop}" />
        <SolidColorBrush x:Key="WindowBackgroundBottomBrush" Color="{StaticResource WindowBackgroundBottom}" />
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}" />
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}" />
        <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedText}" />
        <SolidColorBrush x:Key="HighlightTextBrush" Color="{StaticResource HighlightText}" />
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />

        <!-- Typography -->
        <FontFamily x:Key="AppFont">Segoe UI</FontFamily>

        <!-- Button style -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" BorderBrush="#FF7C3AED" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF7C3AED" />
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF6366F1" BlurRadius="12" ShadowDepth="0" Opacity="0.8" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="0.5" CenterY="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button style -->
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource HighlightTextBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="{StaticResource HighlightTextBrush}" />
        </Style>

        <!-- TextBlock styles -->
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="TextBlock" x:Key="SubHeaderText">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
        </Style>
        <Style TargetType="TextBlock" x:Key="HighlightedText">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{StaticResource HighlightTextBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!-- ListBoxItem style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="2,1" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22364A6A" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl subtle style -->
        <Style TargetType="TabControl">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        </Style>

        <!-- TabItem style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="HeaderBorder" Background="#FF0F3460" BorderBrush="#FF1A4D7A" BorderThickness="1,1,1,0" CornerRadius="8,8,0,0" Padding="12,8" Margin="2,0">
                                <ContentPresenter ContentSource="Header" TextBlock.Foreground="{StaticResource MutedTextBrush}" TextBlock.FontSize="12" TextBlock.FontWeight="SemiBold" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="{StaticResource PrimaryBrush}" />
                                <Setter TargetName="HeaderBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                                <Setter Property="TextBlock.Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#FF1A4D7A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- BoolToVisibility Converter -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    </Application.Resources>
</Application>