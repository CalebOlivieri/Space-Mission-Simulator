<Window x:Class="SpaceMissionSimulator.MissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Missions" Height="600" Width="800" Background="{StaticResource WindowBackgroundTopBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Canvas Background="{StaticResource WindowBackgroundBottomBrush}" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Bodies}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Width="{Binding DisplaySize}" Height="{Binding DisplaySize}" Fill="{Binding Color}" Stroke="White" StrokeThickness="0.5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Canvas>

        <StackPanel Grid.Column="1" Margin="8">
            <TextBlock Style="{StaticResource HeaderText}" Text="Modo Misiones" />

            <!-- Información del jugador -->
            <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                <TextBlock Text="Créditos: " FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                <TextBlock Text="{Binding PlayerCredits}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" VerticalAlignment="Center" />
            </StackPanel>
            <WrapPanel Margin="6">
                <Button Content="Generar Misiones" Command="{Binding GenerateMissionsCommand}" Margin="2" Style="{StaticResource PrimaryButton}" />
                <Button Content="Añadir Nave" Command="{Binding AddShipCommand}" Margin="2" Style="{StaticResource PrimaryButton}" />
                <Button Content="Iniciar" Command="{Binding StartCommand}" Margin="2" Style="{StaticResource SecondaryButton}" />
                <Button Content="Pausar" Command="{Binding PauseCommand}" Margin="2" Style="{StaticResource SecondaryButton}" />
            </WrapPanel>

            <!-- Volver al menú -->
            <Button Content="← Volver al Menú" Command="{Binding ReturnToMenuCommand}" Style="{StaticResource SecondaryButton}" Margin="0,8,0,0" HorizontalAlignment="Stretch" />

            <TextBlock Text="Misiones" FontWeight="Bold" Margin="0,10,0,4" Foreground="White" />
            <ListBox ItemsSource="{Binding Missions}"
                     SelectedItem="{Binding SelectedMission, Mode=TwoWay}"
                     Height="260"
                     Background="{StaticResource CardBackgroundBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="2">
                            <TextBlock Text="{Binding Description}"
                                       Foreground="{StaticResource MutedTextBrush}" />
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Estado: "
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock Text="{Binding Status}"
                                           Foreground="{StaticResource AccentBrush}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Recompensa: "
                                           Foreground="{StaticResource MutedTextBrush}" />
                                <TextBlock Text="{Binding RewardCredits}"
                                           Foreground="{StaticResource SuccessBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        <!-- Acciones sobre la misión seleccionada -->
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
        <Button Content="Aceptar misión"
            Command="{Binding AcceptMissionCommand}"
            CommandParameter="{Binding SelectedMission}"
            Margin="0,0,4,0"
            Style="{StaticResource PrimaryButton}"
            ToolTip="Sólo puedes tener una misión activa a la vez" />
        <Button Content="Cobrar recompensa"
            Command="{Binding ExtractMissionCommand}"
            CommandParameter="{Binding SelectedMission}"
            Style="{StaticResource SecondaryButton}" />
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
