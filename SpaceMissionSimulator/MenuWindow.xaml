<Window x:Class="SpaceMissionSimulator.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Mission Simulator - Menu" Height="220" Width="360" Background="{StaticResource WindowBackgroundTopBrush}">
    <Grid Margin="12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Space Mission Simulator" Style="{StaticResource HeaderText}" HorizontalAlignment="Center" Margin="0,0,0,8" />
            <TextBlock Text="Elige un modo:" Style="{StaticResource HighlightedText}" Margin="0,0,0,12" />
            <Button Name="SandboxBtn" Content="Modo Sandbox" Height="40" Margin="0,0,0,8" Click="SandboxBtn_Click" Style="{StaticResource PrimaryButton}" />
            <Button Name="MissionsBtn" Content="Modo Misiones" Height="40" Margin="0,0,0,8" Click="MissionsBtn_Click" Style="{StaticResource PrimaryButton}" />
            <TextBlock Text="(En Missions tendrás un sistema generado y una única nave)" Style="{StaticResource SubHeaderText}" TextWrapping="Wrap" Margin="0,6,0,0" />
        </StackPanel>
    </Grid>
</Window>
